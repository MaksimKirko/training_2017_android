<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_friendslist_nav_header"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_margin_friendslist_header_horizontal_vertical"
    android:paddingLeft="@dimen/margin_friendslist_header_horizontal"
    android:paddingRight="@dimen/margin_friendslist_header_horizontal"
    android:paddingTop="@dimen/margin_margin_friendslist_header_horizontal_vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageview_navigation_drawer_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_friendslist_nav_header_vertical"
        tools:src="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:id="@+id/textview_navigation_drawer_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_friendslist_nav_header_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Android Studio" />

    <TextView
        android:id="@+id/textview_navigation_drawer_header_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="android.studio@android.com" />

</LinearLayout>
