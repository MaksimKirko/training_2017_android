<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_musiclist_item"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageview_friendslist_item_photo"
                    android:layout_width="@dimen/width_friendslist_item_image"
                    android:layout_height="@dimen/height_friendslist_item_image"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_friendslist_item_image"
                    android:src="@drawable/all_default_user_image" />

                <TextView
                    android:id="@+id/textview_friendslist_item_online_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_friendslist_item_online_status"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="3"
                    tools:text="заходил 24 декабря 2016 в 17:29" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_friendslist_item_name"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="@dimen/margin_friendslist_item_title"
                    android:ellipsize="end"
                    android:gravity="left|bottom"
                    android:maxLines="2"
                    tools:text="Name Name Name Name Name Name" />

                <Button
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_friendslist_item_title"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="Написать сообщение" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>